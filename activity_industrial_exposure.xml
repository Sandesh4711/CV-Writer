<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumePackage.Activity.Tabs.IndustrialExposure"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="2dp"
        android:background="#FFF"
        android:id="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:id="@+id/back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CV Writer"
                android:textSize="22dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:layout_toRightOf="@id/back"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_home"
                android:padding="3dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/homeIcon"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/rel">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Industrial Exposure"
            android:textSize="22dp"
            android:id="@+id/headingInd"
            android:enabled="false"
            android:textColor="#313030"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_create_black_24dp"
            android:id="@+id/edit23"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/rel"
    android:id="@+id/in1"
    android:layout_marginHorizontal="20dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/industryName"
        android:hint="Enter Your Exposure here"/>
</com.google.android.material.textfield.TextInputLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="A student who has been exposed to the industry is a student who is more aware of the opportunities that are out there in the field and who demonstrates a greater level of commitment and dedication to what he or she is interested in."
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="16dp"
    android:textSize="15dp"
    android:layout_below="@id/in1"
    android:textColor="#797878"
    android:elevation="2dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveInd"
        android:background="@drawable/rounded_corners"
        android:layout_marginHorizontal="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:textColor="#FFF"/>
</RelativeLayout>