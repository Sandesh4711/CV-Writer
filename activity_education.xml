                        android:id="@+id/ed24">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Percentage/CGPA"
                            android:textSize="15dp"
                            android:maxLines="1"
                            android:inputType="text"
                            android:id="@+id/cgpaT"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
