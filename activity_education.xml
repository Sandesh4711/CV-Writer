                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Masters"
                android:background="#FFF"
                android:padding="16dp"
                app:ael_duration="400"
                app:ael_expanded="false"
                app:ael_interpolator="linearOutSlowIn"
                app:ael_orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/ed1">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Course"
                            android:maxLines="1"
                            android:inputType="text"
                            android:textSize="15dp"
                            android:id="@+id/course"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/ed2"
                        android:layout_below="@id/ed1">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Stream"
                            android:textSize="15dp"
                            android:inputType="text"
                            android:id="@+id/stream"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/ed2"
                        android:id="@+id/ed3">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Institute"
                            android:inputType="text"
                            android:textSize="15dp"
                            android:id="@+id/institute"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/ed3"
                        android:id="@+id/ed4">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Percentage/CGPA"
                            android:textSize="15dp"
                            android:maxLines="1"
                            android:inputType="text"
                            android:id="@+id/cgpa"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/ed5"
                        android:layout_below="@id/ed4">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Year of Passing"
                            android:textSize="15dp"
                            android:maxLength="4"
                            android:inputType="number"
                            android:id="@+id/year"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ed5"
                        android:text="Save"
                        android:id="@+id/saveIt"
                        android:background="@drawable/roundedcorners"
                        android:layout_marginTop="20dp"/>
                </RelativeLayout>
            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
            <Button
