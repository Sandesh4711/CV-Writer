<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumePackage.Activity.Tabs.PhotoandSignature">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="2dp"
        android:background="#FFF"
        android:id="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:id="@+id/back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CV Writer"
                android:textSize="22dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:layout_toRightOf="@id/back"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_home"
                android:padding="3dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/homeIcon"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:id="@+id/card1"
        android:layout_below="@id/toolbar"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
       android:src="@drawable/ic_boss"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Image"
            android:layout_weight="1"
            android:id="@+id/change"
            android:textColor="#FFF"
            android:background="@drawable/rounded_corners"
            android:paddingHorizontal="10dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Image"
            android:id="@+id/remove"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:textColor="#FFF"
            android:background="@drawable/rounded_corners"
            android:paddingHorizontal="10dp" />
    </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card1"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Add Signature"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/addSignText"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addSignText"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Pad"
                android:layout_weight="1"
                android:id="@+id/signPad"
                android:textColor="#FFF"
                android:background="@drawable/rounded_corners"
                android:paddingHorizontal="10dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Sign"
                android:id="@+id/upload"
                android:layout_weight="1"
                android:layout_marginHorizontal="20dp"
                android:textColor="#FFF"
                android:background="@drawable/rounded_corners"
                android:paddingHorizontal="10dp" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/savePhoto"
        android:background="@drawable/rounded_corners"
        android:layout_marginHorizontal="20dp"
        android:layout_alignParentBottom="true"
        android:textColor="#FFF"
        android:layout_marginBottom="15dp"/>
   </RelativeLayout>