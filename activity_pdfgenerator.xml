<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backpdf">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="2dp"
        android:id="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:id="@+id/back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CV Writer"
                android:textSize="22dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:layout_toRightOf="@id/back"
                android:layout_marginLeft="5dp"/>
</RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="20dp"
        android:id="@+id/relat"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">
    <androidx.viewpager.widget.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="300dp"
        android:layout_height="400dp">
    </androidx.viewpager.widget.ViewPager>
        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_below="@id/pager"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            app:dotsColor="#888787"
            android:layout_marginTop="16dp"
            app:dotsCornerRadius="4dp"
            app:dotsSize="8dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="2"
            app:selectedDotColor="#888787"
            app:progressMode="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/relat"
        android:layout_marginTop="30dp"

        android:id="@+id/rela">
    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        android:id="@+id/progress_circular"/>

        <Button
            android:id="@+id/select"
            android:layout_width="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_shape_with_color"
            android:gravity="center"
            android:text="Select"
            android:textColor="#FFF"
            android:textSize="14dp" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a design to create your resume."
        android:textColor="#FFF"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rela"/>
</RelativeLayout>