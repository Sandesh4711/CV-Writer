<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumePackage.Activity.Tabs.DateDeclaration"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="2dp"
        android:background="#FFF"
        android:id="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:id="@+id/back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CV Writer"
                android:textSize="25dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:layout_toRightOf="@id/back"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_home"
                android:padding="3dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/homeIcon"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:id="@+id/rel"
        android:layout_marginHorizontal="6dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Objective, Declaration and Date "
            android:textSize="20dp"
            android:enabled="false"
            android:id="@+id/headingDate"
            android:textColor="#313030"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_create_black_24dp"
            android:id="@+id/edit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="top"
        android:background="@drawable/roundedcorners"
        android:id="@+id/objective"
        android:layout_below="@id/rel"
        android:text="Secure a responsible career opportunity to fully utilize my training and skills, while making a significant contribution to the success of the company."
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:padding="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedcorners"
        android:id="@+id/declaration"
        android:padding="5dp"
        android:layout_below="@id/objective"
        android:text="I hereby declare that the information furnished above is true to the best of my knowledge. I do hereby declare that above particulars of information and facts stated are true, correct and complete to the best of my knowledge and belief."
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/declaration"
    android:id="@+id/re"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="25dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date "
        android:textSize="22dp"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:id="@+id/trt"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="MMM dd, yyyy"
        android:id="@+id/date"
        android:maxLength="12"
        android:layout_toRightOf="@id/trt"
        android:layout_marginLeft="15dp"
        android:background="@drawable/roundedcorners"
        android:padding="8dp"
        android:layout_centerVertical="true"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_calendar1"
        android:layout_toRightOf="@id/date"
        android:layout_marginLeft="10dp"
        android:id="@+id/dte"
        android:layout_centerVertical="true"/>
</RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place "
        android:layout_marginHorizontal="25dp"
        android:textSize="22dp"
        android:textColor="#000000"
        android:layout_below="@id/re"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/plc"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="City name"
        android:id="@+id/place"
        android:layout_toRightOf="@id/plc"
        android:layout_below="@id/re"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:inputType="text"
        android:layout_marginLeft="5dp"
        android:background="@drawable/roundedcorners"
        android:padding="8dp"
        android:layout_centerVertical="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveDate"
        android:background="@drawable/rounded_corners"
        android:layout_marginHorizontal="20dp"
        android:layout_alignParentBottom="true"
        android:textColor="#FFF"
        android:layout_marginBottom="15dp"/>
</RelativeLayout>