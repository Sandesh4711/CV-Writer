<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumePackage.Activity.Tabs.AchievementAndAwards"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="2dp"
        android:background="#FFF"
        android:id="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:id="@+id/back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CV Writer"
                android:textSize="22dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:layout_toRightOf="@id/back"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_home"
                android:padding="3dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/homeIcon"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_below="@id/toolbar"
        android:id="@+id/rel">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Achievements and Awards"
            android:textSize="22dp"
            android:id="@+id/headingAwa"
            android:enabled="false"
            android:textColor="#313030"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_create_black_24dp"
            android:id="@+id/edit7"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/awards"
    android:layout_marginTop="15dp"
    android:hint="Enter in numbered form"
    android:layout_below="@id/rel"
    android:layout_marginHorizontal="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/awards"
        android:text="-> Write a list of your achievements.\n-> Focus on the key accomplishments.\n-> Use actions verbs.\n-> Use numbers to focus on results.\n\nExamples of business achievements\n-> Completed 200 hours of work experience\n-> Three years of previous work experience in the industry\n-> Increased sales by 17% over a six month period (sales or marketing role)\n-> Collected £20,000 in unpaid debt (credit controller)\n-> Successfully managed and led a team of six members (manager)\n-> Successfully negotiated a 10% discount on all products and goods resulting in total savings of £26,000 per year (stock manager)\n-> Resolved 95% of customer enquiries and complaints (customer service role)"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:textSize="15dp"
        android:textColor="#797878"
        android:elevation="2dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveawards"
        android:background="@drawable/rounded_corners"
        android:layout_marginHorizontal="20dp"
        android:layout_alignParentBottom="true"
        android:textColor="#FFF"
        android:layout_marginBottom="15dp"/>
</RelativeLayout>