<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumePackage.Activity.Tabs.PersonalInfo"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/relPersonal">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="2dp"
        android:background="#FFF"
        android:id="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:id="@+id/back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CV Writer"
                android:textSize="22dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:layout_toRightOf="@id/back"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_home"
                android:padding="3dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/homeIcon"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar"
                android:id="@+id/rel2"
                android:layout_marginHorizontal="5dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Info"
                android:id="@+id/headingPer"
                android:textSize="22dp"
                android:enabled="false"
                android:inputType="text"
                android:textColor="#4B4B4B"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_create_black_24dp"
                    android:id="@+id/edit2"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rel"
                android:layout_below="@id/rel2"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth :- "
                    android:id="@+id/ter"
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:layout_alignParentLeft="true"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:id="@+id/dob"
                    android:maxLines="1"
                    android:inputType="text"
                    android:maxLength="12"
                    android:layout_height="wrap_content"
                    android:hint="Month dd, yyyy"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                   android:layout_toRightOf="@id/ter" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/dobcalendar"
                    android:src="@drawable/ic_calendar1"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rel1"
                android:orientation="horizontal"
                android:layout_below="@id/rel"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marital Status"
                    android:id="@+id/term"
                    android:textSize="20dp" />
                <Spinner
                    android:layout_width="fill_parent"
                    android:id="@+id/marital"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:spinnerMode="dialog"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel1"
                android:id="@+id/basic3"
                android:layout_marginHorizontal="7dp">
                android:layout_marginTop="15dp"
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Known Languages"
                    android:id="@+id/lang"
                    android:textSize="18dp"
                    android:inputType="text"
                    android:layout_marginTop="15dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/basic3"
                android:id="@+id/basic4"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="15dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/nationality"
                    android:maxLines="1"
                    android:textSize="18dp"
                    android:inputType="text"
                    android:hint="Nationality"
                    android:layout_marginTop="15dp"/>
            </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/basic4"
        android:id="@+id/basic5"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="15dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fname"
            android:maxLines="1"
            android:textSize="18dp"
            android:inputType="text"
            android:hint="Father's Name"
            android:layout_marginTop="15dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rounded_corners"
                android:text="Save"
                android:id="@+id/submitPer"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="#FFFFFF"/>
        </RelativeLayout>
