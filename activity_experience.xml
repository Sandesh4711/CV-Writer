<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumePackage.Activity.Tabs.Experience"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="2dp"
        android:background="#FFF"
        android:id="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:id="@+id/back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CV Writer"
                android:textSize="22dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:layout_toRightOf="@id/back"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_home"
                android:padding="3dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/homeIcon"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginHorizontal="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/rel">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experience "
            android:textSize="22dp"
            android:id="@+id/headingExp"
            android:enabled="false"
            android:textColor="#313030"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_create_black_24dp"
                android:id="@+id/edit4"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel"
            android:id="@+id/ex1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Organization "
                android:textSize="20dp"
                android:inputType="text"
                android:maxLines="1"
                android:id="@+id/organization"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ex1"
            android:id="@+id/ex2">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Designation "
                android:maxLines="1"
                android:inputType="text"
                android:textSize="20dp"
                android:id="@+id/designation"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ex2"
            android:id="@+id/ex3">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Duration "
                android:maxLines="1"
                android:inputType="text"
                android:textSize="20dp"
                android:id="@+id/duration"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ex3"
            android:id="@+id/ex4">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Technology "
                android:textSize="20dp"
                android:inputType="text"
                android:maxLines="1"
                android:id="@+id/technology"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ex4"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="15dp"
            android:text="Note : Click on 'Save' button to save your experience and 'Add' button to add more experience to your resume."
            android:textSize="15dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textSize="20dp"
                android:id="@+id/add"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_corners"
                android:layout_weight="1"
                android:layout_marginHorizontal="15dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="20dp"
                android:id="@+id/saveEx"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_corners"
                android:layout_weight="1"
                android:layout_marginHorizontal="15dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>