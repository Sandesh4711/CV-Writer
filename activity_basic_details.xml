<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumePackage.Activity.Tabs.BasicDetails"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/relBasic">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="2dp"
        android:background="#FFF"
        android:id="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:id="@+id/back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CV Writer"
                android:textSize="22dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:layout_toRightOf="@id/back"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_home"
                android:padding="3dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/homeIcon"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_below="@id/toolbar"
        android:id="@+id/rel1">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Details "
            android:textSize="22dp"
            android:id="@+id/headingBasic"
            android:enabled="false"
            android:textColor="#313030"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_create_black_24dp"
            android:id="@+id/edit1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel1"
                android:id="@+id/basic1"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="15dp">
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/name"
                    android:maxLines="1"
                    android:textSize="17dp"
                    android:inputType="text"
                    android:layout_height="match_parent"
                    android:hint="Your Name" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/basic1"
                android:id="@+id/basic2"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="10dp">
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/ad1"
                    android:maxLines="1"
                    android:textSize="17dp"
                    android:inputType="text"
                    android:layout_height="match_parent"
                    android:hint="Address Line 1"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/basic2"
                android:id="@+id/basic3"
                android:layout_marginHorizontal="7dp">
                android:layout_marginTop="10dp"
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Address Line 2"
                    android:id="@+id/ad2"
                    android:textSize="17dp"
                    android:inputType="text"
                    android:maxLines="1"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/basic3"
                android:id="@+id/basic4"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="10dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ad3"
                    android:textSize="17dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:hint="Address Line 3"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/basic4"
                android:id="@+id/basic5"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="10dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Your Email"
                    android:inputType="textEmailAddress"
                    android:textSize="17dp"
                    android:id="@+id/email"
                    android:maxLines="1"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/basic5"
                android:id="@+id/basic6"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="10dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/phone"
                    android:inputType="number"
                    android:textSize="17dp"
                    android:maxLength="10"
                    android:hint="Phone"/>
            </com.google.android.material.textfield.TextInputLayout>
                    <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rounded_corners"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="20dp"
                android:text="Save"
                android:id="@+id/submit"
                android:textColor="#FFFFFF"/>

</RelativeLayout>